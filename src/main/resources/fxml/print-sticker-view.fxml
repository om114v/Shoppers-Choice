<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stickerapp.controllers.PrintStickerController" alignment="CENTER" spacing="15.0" prefWidth="400.0" prefHeight="300.0" styleClass="root">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Item Name:" prefWidth="120.0"/>
        <TextField fx:id="itemNameField" prefWidth="200.0" promptText="Enter item name"/>
        <ImageView fx:id="itemNameIcon" fitWidth="20.0" fitHeight="20.0"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Supplier Name:" prefWidth="120.0"/>
        <TextField fx:id="supplierNameField" prefWidth="200.0" promptText="Enter supplier name"/>
        <ImageView fx:id="supplierNameIcon" fitWidth="20.0" fitHeight="20.0"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Price:" prefWidth="120.0"/>
        <TextField fx:id="priceField" prefWidth="200.0" promptText="Enter price"/>
        <ImageView fx:id="priceIcon" fitWidth="20.0" fitHeight="20.0"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Number of Stickers:" prefWidth="120.0"/>
        <Spinner fx:id="stickerCountSpinner" prefWidth="200.0" editable="true">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="100" initialValue="1"/>
            </valueFactory>
        </Spinner>
        <ImageView fx:id="stickerCountIcon" fitWidth="20.0" fitHeight="20.0"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="printButton" text="Print" disable="true" prefWidth="100.0"/>
    </HBox>
</VBox>